<form id="user-form-new" class="form-horizontal" role="form" onsubmit="return createNewUser()">
    <div class="modal-body">
        <div class="container-fluid">
            <div class="row" id="flash-message-overlay">
                <div class="row">
                </div>
            </div>
            <div class="col-md-11">
                <div class="form-group">
                    <label for="inputUsername" class="col-md-4 control-label">{{ 'user.username'|trans }} *</label>

                    <div class="col-md-8">
                        <input type="text" class="form-control" name="username-new" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-md-4 control-label">{{ 'user.password'|trans }} *</label>

                    <div class="col-md-8">
                        <input type="password" class="form-control" name="password-new"
                               placeholder="{{ 'user.password'|trans }}" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputRole" class="col-md-4 control-label">{{ 'user.role'|trans }}</label>

                    <div class="col-md-8">
                        <select name="role-new" class="form-control">
                            {% for role in roles %}
                                <option value="{{ role.id }}">{{ role.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'button.cancel'|trans }}</button>
        <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary"/>
        <input name="_csrf_token" value="{{ token }}" type="hidden">
    </div>
</form>
